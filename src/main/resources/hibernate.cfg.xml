<hibernate-configuration>
    <session-factory>
        <!-- Configurações do banco de dados -->
        <!-- Corrigindo a URL para o Session Pooler -->
        <property name="hibernate.connection.url">jdbc:postgresql://aws-0-us-west-1.pooler.supabase.com:5432/postgres</property>
